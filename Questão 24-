#include <stdio.h>

float calcularMedia(int *vetor, int tamanho) {
    int soma = 0;
    for (int i = 0; i < tamanho; i++) {
        soma += *(vetor + i);
    }
    return (float)soma / tamanho;
}

int main() {
    int numeros[10];

    printf("Digite 10 números inteiros:\n");
    for (int i = 0; i < 10; i++) {
        scanf("%d", &numeros[i]);
    }

    float media = calcularMedia(numeros, 10);
    printf("Média: %.2f\n", media);

    return 0;
}
