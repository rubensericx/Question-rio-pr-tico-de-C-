#include <stdio.h>

void verificarNota(float *nota) {
    if (*nota >= 7.0)
        printf("Aluno Aprovado.\n");
    else
        printf("Aluno Reprovado.\n");
}

int main() {
    float nota;

    printf("Digite a nota do aluno: ");
    scanf("%f", &nota);

    verificarNota(&nota);

    return 0;
}
