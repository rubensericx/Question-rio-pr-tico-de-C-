#include <stdio.h>

void exibirVetor(int *vetor, int tamanho) {
    for (int i = 0; i < tamanho; i++) {
        printf("Elemento %d: %d\n", i, *(vetor + i));
    }
}

int main() {
    int numeros[5];

    printf("Digite 5 nÃºmeros inteiros:\n");
    for (int i = 0; i < 5; i++) {
        scanf("%d", &numeros[i]);
    }

    printf("\nExibindo os elementos do vetor:\n");
    exibirVetor(numeros, 5);

    return 0;
}
